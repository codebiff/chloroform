source 'https://rubygems.org'

gem 'rails', '3.2.11'

gem "mongo_mapper"
gem "bson_ext"
gem "bcrypt-ruby"

gem "bootstrap-sass"
gem 'google-analytics-rails'

group :development, :test do
  gem "rspec-rails"
  gem "capybara"
end

group :development do
  gem "rb-fsevent"
  gem "guard-livereload"
  gem "rack-livereload"
  gem "rb-inotify"
  gem "meta_request"
  gem "letter_opener"
end

group :test do
  gem "launchy"
  gem "spork-rails"
end

group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'
